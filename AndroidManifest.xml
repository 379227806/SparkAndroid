<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sparkplatform.ui"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/androidicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sparkplatform.ui.MainActivity"
            android:label="@string/app_name" 
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sparkplatform.ui.LoginActivity"
            android:label="@string/title_activity_login" 
            android:noHistory="true">
        </activity>
        <activity
            android:name="com.sparkplatform.ui.WebViewActivity"
            android:label="@string/title_activity_web_view" 
            android:noHistory="true">
        </activity>
        <activity
            android:name="com.sparkplatform.ui.ViewListingsActivity"
            android:label="@string/title_activity_view_listings" >
        </activity>
        <activity
            android:name="com.sparkplatform.ui.MyAccountActivity"
            android:label="@string/title_activity_my_account" >
        </activity>
        <activity
            android:name="com.sparkplatform.ui.ViewListingActivity"
            android:label="@string/title_activity_view_listing" >
        </activity>
        <activity
            android:name="com.sparkplatform.ui.SlideshowActivity"
            android:label="@string/title_activity_slideshow" >
        </activity>
    </application>

</manifest>